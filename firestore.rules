rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Tasks collection - read access for all users, write only for authenticated users
    match /tasks/{taskId} {
      allow read: if true; // Anyone can read tasks
      allow create: if request.auth != null; // Only authenticated users can create tasks
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.assignedTo || resource.data.assignedTo == null);
      allow delete: if false; // No deletion allowed
      
      // Responses subcollection
      match /responses/{responseId} {
        allow read: if true; // Anyone can read responses
        allow create: if request.auth != null; // Only authenticated users can create responses
        allow update: if request.auth != null && request.auth.uid == resource.data.userId;
        allow delete: if false; // No deletion allowed
      }
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // AI Personalities collection - read-only for all users
    match /personalities/{personalityId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
